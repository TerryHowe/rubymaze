<%= form_for(@passage) do |f| %>
 
  <% if @passage.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@passage.errors.count, "error") %> prohibited
        this passage from being saved:
      </h2>
      <ul>
        <% @passage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :source %><br>
    <%= f.select :source, Room.all.collect { |p| [p.x.to_s + "," + p.y.to_s, p.id ] }, include_blank: true %>
  </p>
 
  <p>
    <%= f.label :destination %><br>
    <%= f.select :destination, Room.all.collect { |p| [p.x.to_s + "," + p.y.to_s, p.id ] }, include_blank: true %>
  </p>
 
  <p>
    <%= f.label :direction %><br>
    <%= f.select :direction, [['North',0],['East',1],['South',2],['West',3]], include_blank: true %>
  </p>

  <p>
    <%= f.submit %>
  </p>
 
<% end %>
